<div class="row">
  <div class="small-12 small-centered columns"  id="list-body">
  <ol>
    <% @posts.each do |post| %>
    <li>
      <%= post[:title] %>
      <a href="<%= post[:link] %>"><%= post[:link] %></a>
      Comments: <%= post[:num_comments] %>
    </li>
    <% end %>
  </ol>
  </div>
</div>
